n=int(input("Enter a number:"))
if(n%2==0 and n%5==0):
    print(n,"is even and devisible by 5")      
else:
    print(n,"is odd")
sum=0
for i in range(n+1):
    sum=sum+i
    i=i+1
print("sum is",sum)
if(n>1):
    for i in range(2,n//2):
        if(n%i==0):
            print(n,"is not a prime number")
        else:
            print(n,"is prime number")
        break
